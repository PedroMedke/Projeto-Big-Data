FROM python:3.12-slim-bullseye

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        openjdk-17-jdk-headless \
        build-essential \
        curl \
    && rm -rf /var/lib/apt/lists/*

ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
ENV PATH="$JAVA_HOME/bin:${PATH}"

WORKDIR /workspace

# Install Python dependencies (light requirements) and pyspark + pytest
COPY requirements_light.txt requirements_light.txt

RUN python -m pip install --upgrade pip setuptools wheel \
    && python -m pip install -r requirements_light.txt \
    && python -m pip install pyspark pytest

# Copy project source
COPY . /workspace

# Default command: run full test suite
CMD ["bash", "-lc", "pytest tests/ -v --tb=short"]
